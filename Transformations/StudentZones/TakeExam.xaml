    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Transformations"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Testing Zone"
    Width="1053"
    Height="746"
    MinWidth="800"
    MinHeight="640"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="166*" />
            <RowDefinition Height="445*" />
        </Grid.RowDefinitions>

        <Menu
            x:Name="menu1"
            Height="21"
            Margin="0,0,-0.4,0"
            VerticalAlignment="Top"
            Panel.ZIndex="3">

            <MenuItem
                x:Name="Open"
                Click="Return"
                Header="_Return to Studying">
                <MenuItem.Icon>
                    <Viewbox
                        Width="16"
                        Height="16"
                        HorizontalAlignment="Left">
                        <Image Source="/Transformations;component/Resources/Return.png" />
                    </Viewbox>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem
                x:Name="Save_File"
                Click="SavePDF"
                Header="_Export results to PDF">
                <MenuItem.Icon>
                    <Viewbox
                        Width="16"
                        Height="16"
                        HorizontalAlignment="Left">
                        <Image Source="/Transformations;component/Resources/File.png" />
                    </Viewbox>
                </MenuItem.Icon>
            </MenuItem>



            <MenuItem
                x:Name="HelpButton"
                Click="Help"
                Header="_Help">
                <MenuItem.Icon>
                    <Viewbox
                        Width="16"
                        Height="16"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">
                        <Image Source="/Transformations;component/Resources/Info.png" />
                    </Viewbox>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>

        <TabControl
            x:Name="tab_control"
            Grid.RowSpan="2"
            Margin="5,26,-0.4,0.4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Panel.ZIndex="5">
            <!--  Home TAB  -->
            <TabItem x:Name="tab_home">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="Black" Text="Home" />
                    </StackPanel>
                </TabItem.Header>


                <Grid x:Name="HomeGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="272*" />
                        <RowDefinition Height="263*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="338*" />
                        <ColumnDefinition Width="345*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Margin="10"
                        Text="Welcome to the student portal, here you can review your past exam results and take a new exam. Your results will be viewable to your teacher. To get started use the tabs above to select a topic and exam difficulty."
                        TextWrapping="Wrap" />
                    <GroupBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Header="Exams organized by topic">
                        <Grid>
                            <chartingToolkit:Chart
                                Name="ExamType"
                                Title="Proportion of exam types"
                                Background="White">
                                <chartingToolkit:PieSeries
                                    DependentValuePath="Value"
                                    IndependentValuePath="Key"
                                    IsSelectionEnabled="True"
                                    ItemsSource="{Binding}" />
                            </chartingToolkit:Chart>
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Grid.Row="1"
                        Margin="10,5,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Header="Exams organized by difficulty">
                        <Grid>
                            <chartingToolkit:Chart
                                x:Name="ExamDifficulty"
                                Title="Proportion of exam difficulty"
                                Margin="0,10,0,0"
                                Background="White">
                                <chartingToolkit:PieSeries
                                    DependentValuePath="Value"
                                    IndependentValuePath="Key"
                                    IsSelectionEnabled="True"
                                    ItemsSource="{Binding}" />
                            </chartingToolkit:Chart>
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Header="Recent exam results">
                        <Grid>
                            <chartingToolkit:Chart
                                Name="RecentResults"
                                Title="Recent Exam results"
                                Grid.ColumnSpan="2"
                                Background="White">
                                <chartingToolkit:ColumnSeries
                                    DependentValuePath="Value"
                                    IndependentValuePath="Key"
                                    IsSelectionEnabled="True"
                                    ItemsSource="{Binding}" />
                            </chartingToolkit:Chart>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
