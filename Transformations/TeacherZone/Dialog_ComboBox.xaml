<Window x:Class="Transformations.Dialog_ComboBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transformations"
        mc:Ignorable="d"
        Title="Dialog ComboBox"  Height="221.761" Width="415.116" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <GroupBox x:Name="UserGroupBox" Header="GroupBox" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" >
            <UniformGrid Rows="4">
                <TextBlock x:Name="UserTextBox" TextWrapping="Wrap" Text=""/>
                <ComboBox x:Name="UserCombo" Margin="0,0,0,6" SelectionChanged="TeacherSelected"/>
                <ComboBox x:Name="SecondUserCombo" Margin="0,0,0,6" IsEnabled="False" Visibility="Collapsed"/>
                <Button x:Name="UserButton" Content="Button" Click="Execute"/>
            </UniformGrid>
        </GroupBox>
    </Grid>
</Window>
