                                <TextBox x:Name="reflection_y_axis" TextWrapping="Wrap" Text="0"  HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" Height="34" VerticalAlignment="Top" Width="148" IsEnabled="{Binding IsChecked, ElementName=refY}" Margin="43,9,21,0" />
