                        <GroupBox Header="Reflection" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="224">
                            <Grid>
                                <RadioButton x:Name="refX"  GroupName="r_CofO" Content="X Axis Reflection" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" FontSize="15" Height="21" RenderTransformOrigin="0.5,0.5"  />
