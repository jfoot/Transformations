                                                        <Image HorizontalAlignment="Left" Source="/Transformations;component/Resources/eye_hidden.png" />
                                                        <TextBlock Text="Translation Ghost Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,9" Width="145" TextAlignment="Center" />
                                                    </StackPanel>
                                                </Setter.Value>
                                            </Setter>
