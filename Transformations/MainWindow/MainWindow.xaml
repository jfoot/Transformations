                                        <Image Source="/Transformations;component/Resources/trapizum.png" Width="39" Height="36" />
                                        <TextBlock Text="Trapezium"   Width="50" TextAlignment="Center" Height="16" FontSize="11" />
                                    </StackPanel>
                                </Button>
                                <Button x:Name="spawn_pentagon"  HorizontalAlignment="Left" Margin="76,77,0,0" VerticalAlignment="Top" Width="60" Height="60" Click="SpawnPentoganClick">
