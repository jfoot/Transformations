                                    <ComboBoxItem Content="{lex:Loc seconds3}" />
                                    <ComboBoxItem Content="{lex:Loc seconds5}" />
                                    <ComboBoxItem Content="{lex:Loc seconds10}" />
                                    <ComboBoxItem Content="{lex:Loc seconds15}" />
