                <!--Reflection Tab-->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Reflection" Foreground="Red" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <GroupBox Header="X Axis" HorizontalAlignment="Left" Height="75" Margin="10,278,0,0" VerticalAlignment="Top" Width="224">
                            <Grid>
                                <TextBox x:Name="reflection_X_axis" TextWrapping="Wrap" Text="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" Height="34" VerticalAlignment="Top" Width="148" IsEnabled="{Binding IsChecked, ElementName=refX}" Margin="44,9,20,0"/>
