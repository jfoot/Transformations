                                                        <Setter.Value>
                                                            <StackPanel Orientation="Horizontal"  Width="200">
                                                                <Image Source="/Transformations;component/Resources/eye_visable.png" HorizontalAlignment="Left" />
                                                                <TextBlock Text="Translation Ghost Visible" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,9" Width="145" TextAlignment="Center" />
                                                            </StackPanel>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
