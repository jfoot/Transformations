                                        <Image Source="/Transformations;component/Resources/star.png" Width="39" Height="36" />
                                        <TextBlock Text="Star"   Width="38" TextAlignment="Center" Height="16" />
                                    </StackPanel>
                                </Button>
                                <Button x:Name="L_Shape"  HorizontalAlignment="Left" Margin="76,146,0,0" VerticalAlignment="Top" Width="60" Height="60" Click="SpawnLShapeClick">
