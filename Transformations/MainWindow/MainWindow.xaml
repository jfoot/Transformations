                                <Label x:Name="selected_shape_cord" Content="( 0.00 , 0.00 )" HorizontalAlignment="Left" Margin="6,33,0,0" VerticalAlignment="Top" FontSize="20" Width="198" HorizontalContentAlignment="Center" Height="37"/>
