                        <TransformGroup>
                            <ScaleTransform x:Name="scaleTransformCanvas"/>
                            <TranslateTransform x:Name="TranslationTransformCanvas" />
                        </TransformGroup>
                    </Canvas.RenderTransform>
                </Canvas>
            </StackPanel>
        </Border>
        <Slider x:Name="YSlider" Canvas.Left="626" Canvas.Top="10" Width="24" Minimum="-2000"  Maximum="2000" Orientation="Vertical" Panel.ZIndex="3" HorizontalAlignment="Right " VerticalAlignment="Stretch" Margin="0,61,19,33" ValueChanged="SilderValueChanged" Cursor="SizeNS" />
        <Slider x:Name="XSlider" Minimum="-2000"  Maximum="2000"  Panel.ZIndex="3" HorizontalAlignment="Stretch " VerticalAlignment="Bottom" Margin="309,0,43,20" ValueChanged="SilderValueChanged" Cursor="SizeWE" />
        <Slider x:Name="sliderSf"  ValueChanged="SilderValueChanged" Panel.ZIndex="3" Width="302" Cursor="SizeWE" Margin="285,51,0,0" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Maximum="5" Minimum="1" />

        <Label x:Name="version" Content="Version" HorizontalAlignment="Right" Margin="0,21,13,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <Image Margin="2,0,0,-5" Width="248" Source="/Transformations;component/Resources/logo3.png" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="92"  />
        <ToggleButton x:Name="GridSnap" HorizontalAlignment="Left" Margin="281,23,0,0" VerticalAlignment="Top" Width="105" Click="GridSnapState">
