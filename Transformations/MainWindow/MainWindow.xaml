                                        <Image Source="/Transformations;component/Resources/arrow.png" Width="39" Height="36" />
                                        <TextBlock Text="Arrow"   Width="38" TextAlignment="Center" Height="16" />
                                    </StackPanel>
                                </Button>
                                <Button x:Name="Star"  HorizontalAlignment="Left" Margin="7,145,0,0" VerticalAlignment="Top" Width="60" Height="60" Click="SpawnStarClick">
