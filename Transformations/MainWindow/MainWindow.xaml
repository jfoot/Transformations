                                        <Style TargetType="{x:Type ToggleButton}">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <StackPanel Width="200" Orientation="Horizontal">
                                                        <Image HorizontalAlignment="Left" Source="/Transformations;component/Resources/eye_hidden.png" />
                                                        <TextBlock Width="145" Margin="0,9" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{lex:Loc EGhostHidden}" TextAlignment="Center" />
                                                    </StackPanel>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <StackPanel Width="200" Orientation="Horizontal">
                                                                <Image HorizontalAlignment="Left" Source="/Transformations;component/Resources/eye_visable.png" />
                                                                <TextBlock Width="145" Margin="0,9" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{lex:Loc EGhostVisible}" TextAlignment="Center" />
                                                            </StackPanel>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                                <Button x:Name="enlargement_rays"
                                        Width="206" Height="40"
