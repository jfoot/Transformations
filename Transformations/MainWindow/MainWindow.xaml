<Window
    x:Class="Transformations.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Main_Window1"
    Title="MainWindow"
    Width="358"
    Height="686.667"
    MinWidth="850"
    MinHeight="600"
    KeyDown="KeyDownMethod"
    KeyUp="KeyUpMethod"
    Loaded="ProgramLoaded"
    SizeChanged="SizeChange"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid x:Name="grid_main" Panel.ZIndex="10">

        <!--  Canvas XAML  -->
        <Border
            x:Name="border"
            Margin="277,45,13,11"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Panel.ZIndex="3"
            Background="Transparent"
            BorderBrush="#FF7D7D7D"
            BorderThickness="4"
            ClipToBounds="True"
            MouseDown="MouseDown"
            MouseMove="MouseMove"
            MouseUp="MouseUp"
            MouseWheel="MouesWheel">
            <StackPanel ClipToBounds="True">
                <Canvas
                    x:Name="MyCanvas"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Loaded="CanvasLoaded">
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="scaleTransformCanvas" />
                            <TranslateTransform x:Name="TranslationTransformCanvas" />
                        </TransformGroup>
                    </Canvas.RenderTransform>
                </Canvas>
            </StackPanel>
        </Border>
        <Slider
            x:Name="YSlider"
            Canvas.Left="626"
            Canvas.Top="10"
            Width="24"
            Margin="0,61,19,33"
            HorizontalAlignment="Right "
            VerticalAlignment="Stretch"
            Panel.ZIndex="3"
            Cursor="SizeNS"
            Maximum="2000"
            Minimum="-2000"
            Orientation="Vertical"
            ValueChanged="SilderValueChanged" />
        <Slider
            x:Name="XSlider"
            Margin="309,0,43,20"
            HorizontalAlignment="Stretch "
            VerticalAlignment="Bottom"
            Panel.ZIndex="3"
            Cursor="SizeWE"
            Maximum="2000"
            Minimum="-2000"
            ValueChanged="SilderValueChanged" />
        <Slider
            x:Name="sliderSf"
            Width="302"
            Height="27"
            Margin="285,51,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Panel.ZIndex="3"
            Cursor="SizeWE"
            Maximum="5"
            Minimum="1"
            ValueChanged="SilderValueChanged" />

        <Label
            x:Name="version"
            Margin="0,21,13,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Content="Version" />
        <Image
            Width="248"
            Height="92"
            Margin="2,0,0,-5"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Source="/Transformations;component/Resources/logo3.png" />
        <ToggleButton
            x:Name="GridSnap"
            Width="105"
            Margin="281,23,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="GridSnapState">
            <StackPanel
                Width="87"
                Height="14"
                Orientation="Horizontal">
                <Image Source="/Transformations;component/Resources/snaptogrid.png" />
                <TextBlock
                    Width="75"
                    Margin="0,-1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="Snap To Grid" />
            </StackPanel>
        </ToggleButton>



        <ScrollViewer
            Width="272"
            Margin="0,26,0,87"
            HorizontalAlignment="Left">
            <TabControl
                x:Name="tab_control"
                Width="250"
                Height="753"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Panel.ZIndex="5">
                <!--  Home TAB  -->
                <TabItem x:Name="tab_home">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Black" Text="Home" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <GroupBox
                            Width="224"
                            Height="302"
                            Margin="10,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Header="Spawn Shape">
                            <Grid>
                                <Button
                                    x:Name="spawn_circle"
                                    Width="60"
                                    Height="60"
                                    Margin="7,7,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="SpawnCircleClick">
                                    <StackPanel
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Orientation="Vertical">
                                        <Image
                                            Width="39"
                                            Height="36"
                                            Source="/Transformations;component/Resources/circle.png" />
                                        <TextBlock
                                            Width="38"
                                            Height="16"
                                            Text="Circle"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="spawn_freeform"
                                    Width="198"
                                    Height="60"
                                    Margin="7,214,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="SpawnFreeFormClick">
                                    <StackPanel
                                        Width="196"
                                        Height="30"
                                        Orientation="Horizontal">
                                        <Image Width="52" Source="/Transformations;component/Resources/pen.png" />
                                        <TextBlock
                                            Width="88"
                                            Margin="0,7"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="Free Form"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="spawn_rectangle"
                                    Width="60"
                                    Height="60"
                                    Margin="76,7,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="SpawnRectangleClick">
                                    <StackPanel
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Orientation="Vertical">
                                        <Image
                                            Width="39"
                                            Height="36"
                                            Source="/Transformations;component/Resources/Square.png" />
                                        <TextBlock
                                            Width="38"
                                            Height="16"
                                            Text="Square"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="spawn_triangle"
                                    Width="60"
                                    Height="60"
                                    Margin="145,7,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="SpawnTriangleClick">
                                    <StackPanel
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Orientation="Vertical">
                                        <Image
                                            Width="39"
                                            Height="36"
                                            Source="/Transformations;component/Resources/triangle.png" />
                                        <TextBlock
                                            Width="47"
                                            Height="16"
                                            Text="Triangle"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="spawn_trapzium"
                                    Width="60"
                                    Height="60"
                                    Margin="7,76,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="SpawmTrapeziumClick">
                                    <StackPanel
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Orientation="Vertical">
                                        <Image
                                            Width="39"
                                            Height="36"
                                            Source="/Transformations;component/Resources/trapizum.png" />
                                        <TextBlock
                                            Width="50"
                                            Height="16"
                                            FontSize="11"
                                            Text="Trapezium"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="spawn_pentagon"
                                    Width="60"
                                    Height="60"
                                    Margin="76,77,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="SpawnPentoganClick">
                                    <StackPanel
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Orientation="Vertical">
                                        <Image
                                            Width="39"
                                            Height="36"
                                            Source="/Transformations;component/Resources/pentagon.png" />
                                        <TextBlock
                                            Width="53"
                                            Height="16"
                                            Text="Pentagon"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="spawn_arrow"
                                    Width="60"
                                    Height="60"
                                    Margin="145,76,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="SpawnArrowClick">
                                    <StackPanel
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Orientation="Vertical">
                                        <Image
                                            Width="39"
                                            Height="36"
                                            Source="/Transformations;component/Resources/arrow.png" />
                                        <TextBlock
                                            Width="38"
                                            Height="16"
                                            Text="Arrow"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="Star"
                                    Width="60"
                                    Height="60"
                                    Margin="7,145,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="SpawnStarClick">
                                    <StackPanel
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Orientation="Vertical">
                                        <Image
                                            Width="39"
                                            Height="36"
                                            Source="/Transformations;component/Resources/star.png" />
                                        <TextBlock
                                            Width="38"
                                            Height="16"
                                            Text="Star"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="L_Shape"
                                    Width="60"
                                    Height="60"
                                    Margin="76,146,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="SpawnLShapeClick">
                                    <StackPanel
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Orientation="Vertical">
                                        <Image
                                            Width="39"
                                            Height="36"
                                            Source="/Transformations;component/Resources/Lshape.png" />
                                        <TextBlock
                                            Width="50"
                                            Height="16"
                                            Text="L Shape"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="Parallelogram"
                                    Width="60"
                                    Height="60"
                                    Margin="145,145,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="SpawnParaClick"
                                    FontSize="9">
                                    <StackPanel
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Orientation="Vertical">
                                        <Image
                                            Width="39"
                                            Height="36"
                                            Source="/Transformations;component/Resources/Paralalgram.png" />
                                        <TextBlock
                                            Width="56"
                                            Height="16"
                                            Text="Parallelogram"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <GroupBox
                            Width="224"
                            Height="220"
                            Margin="10,312,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Header="Edit Shape">
                            <Grid Margin="0,0,0,0">
                                <Button
                                    x:Name="deleteShape"
                                    Width="198"
                                    Height="46"
                                    Margin="6,149,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="DeleteShapeClick"
                                    Content="Delete Shape"
                                    IsEnabled="False" />
                                <Button
                                    x:Name="unselectShape"
                                    Width="198"
                                    Height="46"
                                    Margin="6,98,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="UnselectShapeClick"
                                    Content="Unselect Shape"
                                    IsEnabled="False" />
                                <Label
                                    x:Name="selectedShapeLabel"
                                    Width="198"
                                    Height="29"
                                    Margin="6,10,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center"
                                    Content="No Shape Currently Selected"
                                    FontSize="14" />
                                <Label
                                    x:Name="selected_shape_cord"
                                    Width="198"
                                    Height="37"
                                    Margin="6,33,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center"
                                    Content="( 0.00 , 0.00 )"
                                    FontSize="20" />
                                <Label
                                    x:Name="selected_shape_dim"
                                    Width="198"
                                    Height="29"
                                    Margin="6,65,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center"
                                    Content="Width: 0     Height: 0"
                                    FontSize="14" />
                            </Grid>
                        </GroupBox>

                        <Rectangle
                            Width="224"
                            Height="58"
                            Margin="10,536,0,111"
                            HorizontalAlignment="Left"
                            Fill="White"
                            RadiusX="5"
                            RadiusY="5"
                            Stroke="#FF2F65B8"
                            StrokeThickness="3" />
                        <Label
                            x:Name="accountName"
                            Width="161"
                            Height="38"
                            Margin="73,550,0,117"
                            HorizontalAlignment="Left"
                            Background="#00000000"
                            Content="Guest Account"
                            FontFamily="Segoe UI Light"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="Black" />
                        <Image
                            Width="52"
                            Height="46"
                            Margin="21,542,0,117"
                            HorizontalAlignment="Left"
                            Source="/Transformations;component/Resources/login.png" />

                        <TextBlock
                            Margin="10,602,10,0"
                            Foreground="#FF939393"
                            Text="Searching for a setting? Check the &quot;Settings&quot;  window under &quot;File&quot; for more controls."
                            TextWrapping="Wrap" />
                    </Grid>

                </TabItem>
                <!--  Translation Tab  -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="#FF8E00DA" Text="Translation" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <GroupBox
                            Width="224"
                            Height="360"
                            Margin="10,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Header="Translation">
                            <Grid>
                                <Label
                                    Width="165"
                                    Height="161"
                                    Margin="28,-29,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Content="[  ]"
                                    FontSize="120" />

                                <Button
                                    x:Name="trans_execute_button"
                                    Width="206"
                                    Height="46"
                                    Margin="2,186,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    BorderBrush="#FF3C3C3C"
                                    Click="TranslationExecute"
                                    Content="Execute"
                                    FontSize="14"
                                    FontWeight="Bold" />
                                <TextBox
                                    x:Name="transX"
                                    Width="94"
                                    Height="34"
                                    Margin="56,37,62,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center"
                                    FontSize="20"
                                    Text="0"
                                    TextWrapping="Wrap" />
                                <TextBox
                                    x:Name="transY"
                                    Width="94"
                                    Height="34"
                                    Margin="56,76,62,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center"
                                    FontSize="20"
                                    Text="0"
                                    TextWrapping="Wrap" />
                                <ComboBox
                                    x:Name="transSpeed"
                                    Width="206"
                                    Height="34"
                                    Margin="2,147,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    FontSize="15"
                                    SelectedIndex="2">
                                    <ComboBoxItem Content="0 Seconds" />
                                    <ComboBoxItem Content="1 Seconds" />
                                    <ComboBoxItem Content="3 Seconds" />
                                    <ComboBoxItem Content="5 Seconds" />
                                    <ComboBoxItem Content="10 Seconds" />
                                    <ComboBoxItem Content="15 Seconds" />
                                </ComboBox>
                                <ToggleButton
                                    x:Name="translationGhostVisibality"
                                    Width="206"
                                    Height="40"
                                    Margin="2,237,4,0"
                                    Padding="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Checked="ShowTranslationGhosts"
                                    IsChecked="True"
                                    Unchecked="HideTranslationGhosts">
                                    <ToggleButton.Style>
                                        <Style TargetType="{x:Type ToggleButton}">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <StackPanel Width="200" Orientation="Horizontal">
                                                        <Image HorizontalAlignment="Left" Source="/Transformations;component/Resources/eye_hidden.png" />
                                                        <TextBlock
                                                            Width="145"
                                                            Margin="0,9"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Text="Translation Ghost Hidden"
                                                            TextAlignment="Center" />
                                                    </StackPanel>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <StackPanel Width="200" Orientation="Horizontal">
                                                                <Image HorizontalAlignment="Left" Source="/Transformations;component/Resources/eye_visable.png" />
                                                                <TextBlock
                                                                    Width="145"
                                                                    Margin="0,9"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Text="Translation Ghost Visible"
                                                                    TextAlignment="Center" />
                                                            </StackPanel>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                                <Button
                                    x:Name="delete_trans"
                                    Width="206"
                                    Height="47"
                                    Margin="2,282,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Click="DeleteTranslationGhosts">
                                    <StackPanel
                                        Width="196"
                                        Height="34"
                                        Orientation="Horizontal">
                                        <Image Width="28" Source="/Transformations;component/Resources/bin.png" />
                                        <TextBlock
                                            Width="145"
                                            Margin="0,9"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="Delete Translation Ghosts"
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>

                <!--  Reflection Tab  -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Red" Text="Reflection" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <GroupBox
                            Width="224"
                            Height="75"
                            Margin="10,278,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Header="X Axis">
                            <Grid>
                                <TextBox
                                    x:Name="reflection_X_axis"
                                    Width="148"
                                    Height="34"
                                    Margin="44,9,20,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center"
                                    FontSize="20"
                                    IsEnabled="{Binding IsChecked, ElementName=refX}"
                                    Text="0"
                                    TextWrapping="Wrap" />
                                <Label
                                    Margin="12,9,168,0"
                                    VerticalAlignment="Top"
                                    Content="X =  "
                                    FontSize="15" />

                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Width="224"
                            Height="75"
                            Margin="11,118,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Header="Y = MX + C">
                            <Grid>

                                <Label
                                    Margin="0,10,180,0"
                                    VerticalAlignment="Top"
                                    Content="Y =  "
                                    FontSize="15" />
                                <Label
                                    Margin="101,11,74,0"
                                    VerticalAlignment="Top"
                                    Content="X + "
                                    FontSize="15" />
                                <TextBox
                                    x:Name="reflection_c"
                                    Width="64"
                                    Height="34"
                                    Margin="135,10,13,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center"
                                    FontSize="20"
                                    IsEnabled="{Binding IsChecked, ElementName=refYMXC}"
                                    Text="C"
                                    TextWrapping="Wrap" />
                                <TextBox
                                    x:Name="reflection_m"
                                    Width="68"
                                    Height="34"
                                    Margin="33,9,111,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center"
                                    FontSize="20"
                                    IsEnabled="{Binding IsChecked, ElementName=refYMXC}"
                                    Text="M"
                                    TextWrapping="Wrap" />

                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Width="224"
                            Height="100"
                            Margin="10,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Header="Reflection">
                            <Grid>
                                <RadioButton
                                    x:Name="refX"
                                    Height="21"
                                    Margin="10,54,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Content="X Axis Reflection"
                                    FontSize="15"
                                    GroupName="r_CofO"
                                    RenderTransformOrigin="0.5,0.5" />
                                <RadioButton
                                    x:Name="refY"
                                    Margin="10,32,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Content="Y Axis Reflection"
                                    FontSize="15"
                                    GroupName="r_CofO" />
                                <RadioButton
                                    x:Name="refYMXC"
                                    Margin="10,10,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Content="Y = MX + C Reflection"
                                    FontSize="15"
                                    GroupName="r_CofO"
                                    IsChecked="True" />
                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Width="224"
                            Height="75"
                            Margin="11,198,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Header="Y Axis">
                            <Grid>
                                <TextBox
                                    x:Name="reflection_y_axis"
                                    Width="148"
                                    Height="34"
                                    Margin="43,9,21,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center"
                                    FontSize="20"
                                    IsEnabled="{Binding IsChecked, ElementName=refY}"
                                    Text="0"
                                    TextWrapping="Wrap" />
                                <Label
                                    Margin="11,9,169,0"
                                    VerticalAlignment="Top"
                                    Content="Y =  "
                                    FontSize="15" />
                            </Grid>
                        </GroupBox>
                        <ToggleButton
                            x:Name="Reflection_Execute"
                            Width="206"
                            Height="59"
                            Margin="19,364,19,0"
                            Padding="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            BorderBrush="#FF343434"
                            Checked="ReflectionExecute"
                            Content="Execute"
                            FontSize="14"
                            FontWeight="Bold"
                            Unchecked="ReflectionUnexecute" />
                    </Grid>
                </TabItem>

                <!--  Rotation Tab  -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Green" Text="Rotations" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <GroupBox
                            Width="224"
                            Height="359"
                            Margin="10,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Header="Rotation">
                            <Grid>
                                <Button
                                    x:Name="rotation_execute_button"
                                    Width="204"
                                    Height="56"
                                    Margin="5,173,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    BorderBrush="#FF383838"
                                    Click="RotationExecute"
                                    Content="Execute"
                                    FontSize="14"
                                    FontWeight="Bold" />
                                <ComboBox
                                    x:Name="rotationAmount"
                                    Width="204"
                                    Height="34"
                                    Margin="5,5,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    FontSize="15"
                                    SelectedIndex="2">
                                    <ComboBoxItem>45 Degrees</ComboBoxItem>
                                    <ComboBoxItem>90 Degrees</ComboBoxItem>
                                    <ComboBoxItem>180 Degrees</ComboBoxItem>
                                    <ComboBoxItem>270 Degrees</ComboBoxItem>
                                    <ComboBoxItem>360 Degrees</ComboBoxItem>
                                </ComboBox>
                                <ComboBox
                                    x:Name="rotationDirection"
                                    Width="204"
                                    Height="34"
                                    Margin="5,45,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    FontSize="15"
                                    SelectedIndex="0">
